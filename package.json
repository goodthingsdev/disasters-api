{
  "name": "disasters",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon",
    "build": "tsc",
    "postbuild": "cp openapi.json dist/openapi.json",
    "test": "jest --maxWorkers=4",
    "test:ci": "jest --coverage --ci --runInBand --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watchAll",
    "init-db": "node dist/init-db.js",
    "lint": "eslint routes/**/*.ts services/**/*.ts middleware/**/*.ts graphql/**/*.ts validation/**/*.ts *.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "validate:openapi": "node validate-openapi.js",
    "pretest": "npx tsx create-test-dbs.ts",
    "proto:js": "pbjs -t static-module -w commonjs -o proto/disaster_pb.js proto/disaster.proto",
    "proto:ts": "pbts -o proto/disaster_pb.d.ts proto/disaster_pb.js",
    "proto:all": "npm run proto:js && npm run proto:ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^3.13.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "envalid": "^8.0.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "graphql": "^16.11.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.13.3",
    "pg": "^8.16.0",
    "prom-client": "^15.1.3",
    "protobufjs": "^7.5.3",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@types/pg": "^8.15.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.9",
    "openapi-schema-validation": "^0.4.2",
    "prettier": "^3.5.3",
    "protobufjs-cli": "^1.1.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "types": "dist/index.d.ts",
  "type": "module"
}
